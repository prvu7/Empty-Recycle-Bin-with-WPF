<Window x:Class="empty_bin_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:empty_bin_app"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Empty Bin App" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Empty Recycle Bin"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"></TextBlock>
            
            <CheckBox x:Name="checkSkipConfirmation"
                      Content="Skip confirmation dialog"
                      Margin="0 0 0 10"></CheckBox>

            <Button x:Name="btnEmpty"
                    Content="Empty Bin"
                    Height="40"
                    Click="btnEmptyRecycleBin_Click"></Button>

            <TextBlock x:Name="txtStatus"
                       Margin="0 20 0 0"
                       TextWrapping="Wrap"
                       Text="Ready to empty recycle bin."
                       HorizontalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
